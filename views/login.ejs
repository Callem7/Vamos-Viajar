<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Login</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <header class="mb-5"> <!-- Menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand" href="/">Vamos Viajar</a> <!-- # -->
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Início</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="#">Sobre Nós</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="#">Contacta-nos</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/admin">Página Admin</a>
                  </li>
                </ul>
                <form class="d-flex call-me-form">
                  <input class="form-control me-2" type="tel" placeholder="Número Telefone" aria-label="Phone number">
                  <button class="btn btn-outline-primary text-nowrap" type="submit">Liga-me</button>
                </form>
              </div>
            </div>
          </nav>
    </header>
    <main> <!-- Slider -->
        <div class="container">
            <div class="row">
                <div class="col-6 offset-3 shadow-lg p-3 mb-5 bg-body rounded">
                    <h1 class="text-center my-4">Página Admin</h1>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                          <button class="nav-link active" id="sign-in-tab" data-bs-toggle="tab" data-bs-target="#sign-in" type="button" role="tab" aria-controls="sign-in" aria-selected="true">Iniciar Sessão</button>
                        </li>
                        <li class="nav-item" role="presentation">
                          <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false">Registar</button>
                        </li>
                      </ul>
                      <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active py-3" id="sign-in" role="tabpanel" aria-labelledby="sign-in-tab">
                            <!-- FORMULÁRIO SIGN IN-->
                            <form class="sign-in-form">
                                <div class="mb-3">
                                    <label for="sign-in-email" class="mb-1">Email</label>
                                    <input class="form-control" type="email" id="sign-in-email" placeholder="Escreve email">
                                </div>
                                <div class="mb-3">
                                    <label for="sign-in-password" class="mb-1">Password</label>
                                    <input class="form-control" type="password" id="sign-in-password" placeholder="Password">
                                </div>
                                <button class="btn btn-primary">Iniciar Sessão</button>
                            </form>
                        </div>
                        <div class="tab-pane fade py-3" id="register" role="tabpanel" aria-labelledby="register-tab">
                            <!-- FORMULÁRIO REGISTAR-->
                            <form class="register-form">
                                <div class="mb-3">
                                    <label for="register-email" class="mb-1">Email</label>
                                    <input class="form-control" type="email" id="register-email" placeholder="Escreve email">
                                </div>
                                <div class="mb-3">
                                    <label for="register-password" class="mb-1">Password</label>
                                    <input class="form-control" type="password" id="register-password" placeholder="Password">
                                </div>
                                <div class="mb-3">
                                    <label for="register-re-enter-password" class="mb-1">Reentrar password</label>
                                    <input class="form-control" type="password" id="register-re-enter-password" placeholder="Reentrar password">
                                </div>
                                <button class="btn btn-primary">Registar</button>
                            </form>
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/login.js"></script>
</body>
</html>